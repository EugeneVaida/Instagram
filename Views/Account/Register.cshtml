@{
    ViewData["Title"] = "Register";
}

@section Header{ }

@model Instagram.ViewModels.RegisterViewModel
<section class="hero-wrap js-fullheight">
    <div class="container">
        <div class="row description js-fullheight align-items-center justify-content-center">
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="card card-login py-4">
                    <form class="form-login" method="post" asp-controller="Account" asp-action="Register">
                        <div class="card-header card-header-primary text-center">
                            <h4 class="card-title">Instagram</h4>
                            <h5 class="card-title">Зарегистрируйтесь, чтобы смотреть фото и видео ваших друзей.</h5>
                            <div class="social-line">
                                <a href="#" class="btn-icon d-flex align-items-center justify-content-center">
                                    <i class="ion-logo-facebook"></i>
                                </a>
                                <a href="#" class="btn-icon d-flex align-items-center justify-content-center">
                                    <i class="ion-logo-twitter"></i>
                                </a>
                                <a href="#" class="btn-icon d-flex align-items-center justify-content-center">
                                    <i class="ion-logo-googleplus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="card-body p-3 mb-5">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-validation-for="Login" placeholder="Имя пользователя" asp-for="UserName">
                            </div>
                            <div class="input-group mb-3">
                                <input type="email" class="form-control" asp-validation-for="Email" placeholder="Электронная почта" asp-for="Email">
                            </div>
                            <div class="input-group mb-3">
                                <input type="tel" class="form-control" asp-validation-for="PhoneNumber" placeholder="Номер телефона" asp-for="PhoneNumber">
                            </div>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-validation-for="Name" placeholder="Имя" asp-for="Name">
                            </div>
                            <div class="input-group mb-3">
                                <input type="date" class="form-control" asp-validation-for="BirthDate" placeholder="Дата рождения" asp-for="BirthDate">
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" placeholder="Пароль" asp-for="Password">
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" placeholder="Подтверждение пароля" asp-for="PasswordConfirm">
                            </div>
                        </div>
                        <div class="footer text-center mb-3">
                            <a class="btn btn-primary" href="~/Account/Login">Войти</a>
                            <input type="submit" value="Зарегистрироваться" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>